# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/petshop_ecommerce

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret
JWT_ACCESS_TOKEN_EXPIRES=3600

# Redis Configuration (Redis Cloud)
CACHE_TYPE=redis
CACHE_REDIS_HOST=your-redis-host.redns.redis-cloud.com
CACHE_REDIS_PORT=12345
CACHE_REDIS_PASSWORD=your-redis-password-here
CACHE_REDIS_DB=0
CACHE_DEFAULT_TIMEOUT=300

# Application
DEBUG=True